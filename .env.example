# ============================================
# LYSTIC LAVISH BEAUTY BAR - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# BUSINESS CONFIGURATION
# ============================================

# Timezone for the business (IANA timezone)
BUSINESS_TIMEZONE=America/New_York

# Business hours in JSON format
# Format: {"dayOfWeek": {"open": "HH:MM", "close": "HH:MM"}}
# Use null for closed days
BUSINESS_HOURS_JSON={"monday":{"open":"09:00","close":"18:00"},"tuesday":{"open":"09:00","close":"18:00"},"wednesday":{"open":"09:00","close":"18:00"},"thursday":{"open":"09:00","close":"19:00"},"friday":{"open":"09:00","close":"19:00"},"saturday":{"open":"10:00","close":"17:00"},"sunday":null}

# Buffer time in minutes between appointments
APPOINTMENT_BUFFER_MINUTES=15

# How many days ahead can customers book
BOOKING_WINDOW_DAYS=60

# Slot interval in minutes for availability display
SLOT_INTERVAL_MINUTES=30

# ============================================
# GOOGLE CLOUD CONFIGURATION
# ============================================
# Create a service account in Google Cloud Console
# Enable Google Calendar API and Google Sheets API
# Download the JSON key file

# Service account email (from JSON key file)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Private key (from JSON key file)
# Important: Keep the \n characters for line breaks
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================
# GOOGLE CALENDAR
# ============================================
# Share your calendar with the service account email (Editor access)
# Find the Calendar ID in Calendar Settings

GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# ============================================
# GOOGLE SHEETS (Database)
# ============================================
# Create Google Sheets for Services, Bookings, and Payments
# Share each sheet with the service account email (Editor access)
# Get the Sheet ID from the URL: docs.google.com/spreadsheets/d/{SHEET_ID}/edit

# Services sheet - columns: id, category, name, description, duration_minutes, price_cents, is_active
GOOGLE_SHEETS_ID_SERVICES=your-services-sheet-id

# Bookings sheet - columns: id, service_id, customer_name, customer_email, customer_phone,
#                          appointment_datetime, status, calendar_event_id, payment_id,
#                          created_at, updated_at, notes
GOOGLE_SHEETS_ID_BOOKINGS=your-bookings-sheet-id

# Payments sheet - columns: id, booking_id, square_payment_id, amount_cents, status,
#                          payment_method, created_at, updated_at
GOOGLE_SHEETS_ID_PAYMENTS=your-payments-sheet-id

# ============================================
# SQUARE PAYMENTS
# ============================================
# Create a Square Developer account: https://developer.squareup.com
# Create an application to get credentials

# Environment: 'sandbox' for testing, 'production' for live
SQUARE_ENV=sandbox

# Application ID (from Square Developer Dashboard)
SQUARE_APP_ID=sandbox-sq0idb-XXXXXXXXXXXXXXXXXXXXXXXX

# Location ID (from Square Developer Dashboard > Locations)
SQUARE_LOCATION_ID=XXXXXXXXXXXXXXXXXXXXXXXX

# Access Token (from Square Developer Dashboard > Credentials)
SQUARE_ACCESS_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Webhook Signature Key (from Square Developer Dashboard > Webhooks)
# Used to verify webhook requests are from Square
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Base URL of your application (used for webhooks, redirects)
# Local development: http://localhost:3000
# Production: https://your-domain.com
BASE_URL=http://localhost:3000

# Next.js URL (for API calls from client)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Square App ID for client-side (public)
NEXT_PUBLIC_SQUARE_APP_ID=sandbox-sq0idb-XXXXXXXXXXXXXXXXXXXXXXXX

# Square Location ID for client-side (public)
NEXT_PUBLIC_SQUARE_LOCATION_ID=XXXXXXXXXXXXXXXXXXXXXXXX

# Square Environment for client-side
NEXT_PUBLIC_SQUARE_ENV=sandbox
